{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": false,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    },
    "include": ["src"]
}
